{
  "name": "heyho-browser-extension",
  "version": "1.0.0",
  "description": "A browser extension to intelligently track browsing habits and generate insights",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/ specs/tests/ background.js",
    "lint:fix": "eslint src/ specs/tests/ background.js --fix",
    "validate": "npm run lint && npm run test",
    "pre-commit": "npm run validate",
    "prepare": "husky install"
  },
  "devDependencies": {
    "eslint": "^8.57.0",
    "husky": "^8.0.3",
    "jest": "^27.5.1",
    "jest-chrome": "^0.8.0",
    "jest-environment-jsdom": "^27.5.1",
    "lint-staged": "^13.2.3"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": ["<rootDir>/specs/tests/setup.js"],
    "testMatch": [
      "<rootDir>/specs/tests/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/**/*.test.js"
    ]
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && npm run test"
    }
  },
  "keywords": ["browser-extension", "chrome", "firefox", "tracking", "analytics"],
  "author": "HeyHo Extension Team",
  "license": "MIT"
}