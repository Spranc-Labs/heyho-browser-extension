{
  "name": "heyho-browser-extension",
  "version": "1.0.0",
  "description": "A browser extension to intelligently track browsing habits and generate insights",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/ background.js",
    "lint:fix": "eslint src/ background.js --fix",
    "format": "prettier --write 'src/**/*.js' 'background.js'",
    "format:check": "prettier --check 'src/**/*.js' 'background.js'",
    "quality": "npm run lint && npm run format:check",
    "quality:fix": "npm run lint:fix && npm run format",
    "validate": "npm run quality && npm run test",
    "pre-commit": "lint-staged && npm test",
    "prepare": "husky install",
    "postinstall": "husky install"
  },
  "devDependencies": {
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-no-unsanitized": "^4.0.2",
    "fake-indexeddb": "^6.2.4",
    "husky": "^8.0.3",
    "jest": "^27.5.1",
    "jest-chrome": "^0.8.0",
    "jest-environment-jsdom": "^27.5.1",
    "lint-staged": "^13.2.3",
    "prettier": "^3.0.3"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [
      "<rootDir>/specs/tests/setup.js"
    ],
    "testMatch": [
      "<rootDir>/specs/tests/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/**/*.test.js"
    ]
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && npm run test"
    }
  },
  "keywords": [
    "browser-extension",
    "chrome",
    "firefox",
    "tracking",
    "analytics"
  ],
  "author": "HeyHo Extension Team",
  "license": "MIT"
}
