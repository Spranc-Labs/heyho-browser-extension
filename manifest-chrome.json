{
  "manifest_version": 3,
  "name": "HeyHo Extension - Analyze browser journey",
  "version": "1.0.0",
  "description": "A browser extension to intelligently track browsing habits and generate insights to help users understand and manage their digital activity.",
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "src/content/metadata-extractor.js",
        "src/content/page-tracker.js"
      ],
      "run_at": "document_end",
      "exclude_matches": [
        "*://chrome://*/*",
        "*://about:*",
        "*://chrome-extension://*/*"
      ]
    }
  ],
  "action": {
    "default_popup": "src/popup/popup.html",
    "default_title": "HeyHo Extension Debug Panel"
  },
  "permissions": [
    "tabs",
    "storage",
    "idle",
    "alarms"
  ],
  "host_permissions": [
    "<all_urls>"
  ]
}